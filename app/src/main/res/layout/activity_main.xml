<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tonyodev.storagespace.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To my Apps"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        />


    <com.tonyodev.storagegrapher.widget.StorageGraphView
        android:id="@+id/storageView"
        app:titleText="@string/internal_storage"
        app:legendDrawable="@drawable/small_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tonyodev.storagegrapher.widget.StorageGraphView
        android:layout_marginTop="30dp"
        android:id="@+id/sdCardStorageView"
        app:titleText="@string/sdcard_storage"
        app:legendDrawable="@drawable/small_square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
